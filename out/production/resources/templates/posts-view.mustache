{{>layout/header}}

<!-- 게시글 상세 -->
<div class="container">
    {{#post}}
        <p style="font-size:small;">category/{{category}}</p>
        <p style="font-size:24px;">{{title}}</p>

        <span style="font-size:small;">{{author}}</span>
        <span>  </span>
        <span style="font-size:small;">{{createdDate}}</span>

        <div class="float-right">
            <span><a href="/posts/update/{{id}}" class="set-color">Edit</a></span>
            <span><button type="button" id="btn-delete" class="set-color no-border">Delete</button></span>
            <span><a href="/" class="set-color">Go Back</a></span>
        </div>
        <hr>
        <p>{{content}}</p>
    {{/post}}

    <!-- 댓글 -->
    {{>comment/list}}
    {{>comment/form}}
</div>

{{>layout/footer}}