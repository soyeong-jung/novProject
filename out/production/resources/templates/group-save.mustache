{{>layout/header}}

<!--<div id='calendar'></div>-->

<!--그룹생성-->
<div class="container">
    <div class="row d-flex justify-content-center mt-200">
        <button type="button" class="set-color-group no-border" data-toggle="modal" data-target="#exampleModal">
            <h1><i class="bi bi-arrow-right-circle"></i> GO CREATE</h1>
        </button>
    </div> <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Your Group!</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                </div>
                <div class="modal-body">
                    <form id="smartwizard">
                        <ul>
                            <li><a href="#step-1">Step 1<br><small>Category</small></a></li>
                            <li><a href="#step-2">Step 2<br><small>Using Stack</small></a></li>
                            <li><a href="#step-3">Step 3<br><small>Duration</small></a></li>
                            <li><a href="#step-4">Step 4<br><small>Group Name</small></a></li>
                            <li><a href="#step-5">Step 5<br><small>Save</small></a></li>
                        </ul>
                        <div class="mt-4">
                            <!-- 카테고리 -->
                            <div id="step-1">
                                <div class="col-md-6"><label style="font-size:30px;">Category*</label></div>
                                <hr>
                                <br>
                                <div class="col-md-6"><input type="radio" name="category" value="study"> study</div>
                                <br>
                                <div class="col-md-6"><input type="radio" name="category" value="project"> project</div>
                            </div>
                            <!-- 스택 -->
                            <div id="step-2">
                                <div class="col-md-6">
                                    <label style="font-size:30px;">Stack*</label>
                                    <hr>
                                </div>
                                <div class="">
                                    <label style="font-weight:bold;">Language :</label>
                                </div>
                                <div class="grid-container">
                                    <div class="checkbox-item"><input type="checkbox"   value="React"> React</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Vue"> Vue</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Angular"> Angular</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="jQuery"> jQuery</div>

                                    <div class="checkbox-item"><input type="checkbox"   value="Python"> Python</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Kotlin"> Kotlin</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Java"> Java</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Ruby"> Ruby</div>

                                    <div class="checkbox-item"><input type="checkbox"   value="PHP"> PHP</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Nodejs"> Nodejs</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="C++"> C++</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="C#"> C#</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="C"> C</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="JavaScript"> JavaScript</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="TypeScript"> TypeScript</div>
                                </div>

                                <br>
                                <input type="text"  class="box-search" id="stack" placeholder="enter yourself"/>
                                <br><br>

                                <div class="">
                                    <label style="font-weight:bold;">Framework :</label>
                                </div>
                                <div class="grid-container">
                                    <div class="checkbox-item"><input type="checkbox"   value="Django"> Django</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="AppMaster"> AppMaster</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="ExpressJs"> ExpressJs</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Flask"> Flask</div>

                                    <div class="checkbox-item"><input type="checkbox"   value="Spring"> Spring</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="SpringBoot"> SpringBoot</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Fiber"> Fiber</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="CakePHP"> CakePHP</div>
                                </div>

                                <br>
                                <input type="text"  class="box-search"  placeholder="enter yourself"/>
                                <br><br>

                                <div class="">
                                    <label style="font-weight:bold;">Database :</label>
                                </div>
                                <div class="grid-container">
                                    <div class="checkbox-item"><input type="checkbox"   value="MySQL"> MySQL</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="MariaDB"> MariaDB</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Oracle"> Oracle</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="H2"> H2</div>
                                </div>

                                <br>
                                <input type="text"  class="box-search"  placeholder="enter yourself"/>
                                <br><br>

                                <div class="">
                                    <label style="font-weight:bold;">Others :</label>
                                </div>
                                <div class="grid-container">
                                    <div class="checkbox-item"><input type="checkbox"   value="Git"> Git</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="AWS"> AWS</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Figma"> Figma</div>
                                    <div class="checkbox-item"><input type="checkbox"   value="Unity"> Unity</div>
                                </div>

                                <br>
                                <input type="text"  class="box-search"  placeholder="enter yourself"/>
                                <br>
                            </div>
                            <!-- 학습기간 -->
                            <div id="step-3">
                                <div class="col-md-6"><label style="font-size:25px;">Start Date*</label></div>
                                <div class="col-md-6"><input type="text" id="startDate" /></div>
                                <div class="col-md-6"><label style="font-size:25px;">End Date*</label></div>
                                <div class="col-md-6"><input type="text" id="endDate" /></div>
                            </div>
                            <!-- 그룹이름 -->
                            <div id="step-4">
                                <div class="col-md-6"><label style="font-size:30px;">Group Name*</label></div>
                                <div class="col-md-6"><input type="text" id="name" class="form-control" placeholder="ex) SpringBoot Project" required></div>
                                <div class="col-md-6"><label style="font-size:30px;">Group Leader</label></div>
                                <div class="col-md-6"><input type="text" id="leader" class="form-control" style="border:none; outline:none;" value="{{userName}}" readonly></div>
                            </div>
                            <!-- 제출 -->
                            <div id="step-5">
                                <div class="col">
                                    <div class="col-md-6"><label style="font-size:30px;">Headcount</label></div>
                                    <div class="col-md-6"><input type="text" id="headcount" class="form-control" style="border:none; outline:none;"></div>
                                    <input type="hidden" id="headcountStatus" value="0">
                                    <button type="button" id="btn-save-group" class="set-color-group no-border">
                                    <h1>click to save <i class="bi bi-check2-circle"></i></h1>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br><br>
<br><br>

{{>layout/footer}}