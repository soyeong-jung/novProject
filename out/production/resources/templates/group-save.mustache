{{>layout/header}}

<!--<div id='calendar'></div>-->

<!--smartwizard-->
<link href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/smart_wizard.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/smart_wizard_theme_arrows.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/jquery.smartWizard.min.js"></script>

<!--그룹생성-->
<div class="container">
    <div class="row d-flex justify-content-center mt-200"> <button type="button" class="set-color" data-toggle="modal" data-target="#exampleModal"> Create Group </button> </div> <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Smart Wizard modal</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                </div>
                <div class="modal-body">
                    <div id="smartwizard">
                        <ul>
                            <li><a href="#step-1">Step 1<br /><small>Category</small></a></li>
                            <li><a href="#step-2">Step 2<br /><small>Using Stack</small></a></li>
                            <li><a href="#step-3">Step 3<br /><small>Duration</small></a></li>
                            <li><a href="#step-4">Step 4<br /><small>Group Name</small></a></li>
                            <li><a href="#step-5">Step 5<br /><small>Confirm Details</small></a></li>
                        </ul>
                        <div class="mt-4">
                            <!-- 카테고리 -->
                            <div id="step-1">
                                <div class="row mt-3">
                                    <label>Category</label>
                                    <div class="col-md-6"><input type="radio" name="category" value="study"> study</div>
                                    <div class="col-md-6"><input type="radio" name="category" value="project"> project</div>
                                </div>
                            <!-- 스택 -->
                            <div id="step-2">
                                <div class="row mt-3">
                                    <label>Stack</label>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Java"> Java</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Nodejs"> Nodejs</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Spring"> Spring</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="React"> React</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="AWS"> AWS</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Git"> Git</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="javaScript"> JavaScript</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Kotlin"> Kotlin</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Figma"> Figma</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Unity"> Unity</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Vue"> Vue</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="TypeScript"> TypeScript</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="MySQL"> MySQL</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Python"> Python</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="Django"> Django</div>
                                    <div class="col-md-6"><input type="checkbox" name="stack" value="MariaDB"> MariaDB</div>
                                </div>
                            </div>
                            <!-- 학습기간 -->
                            <div id="step-3" class="">
                                <div class="col-md-6"><label>Start Date</label></div>
                                <div class="col-md-6"><input type="text" id="startDate" /></div>
                                <div class="col-md-6"><label>End Date</label></div>
                                <div class="col-md-6"><input type="text" id="endDate" /></div>
                                </div>
                            </div>
                            <!-- 그룹이름 -->
                            <div id="step-4" class="">
                                <div class="col-md-6">
                                    <label>Group Name</label>
                                    <input type="text" class="form-control" placeholder="ex)Spring Portfolio Project"required>
                                </div>
                                <div class="col-md-6">
                                    <label>Group Leader</label>
                                    <input type="text" class="form-control" value="" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br><br>
<br><br>

{{>layout/footer}}