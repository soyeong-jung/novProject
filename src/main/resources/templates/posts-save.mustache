{{>layout/header}}

    <div class="container">
        <div class="float-right">
            <a href="/" class="set-color">Go Back</a>
            <button type="button" id="btn-save" class="set-color no-border">Save</button>
        </div>
        <br><hr>
        <form>
            <input type="hidden" id="author" value="{{userName}}">
            <div class="form-group">
                <label>Title</label>
                <input id="title" class="form-control box-shadow" placeholder="Title...">
            </div>
            <div class="form-group">
                <label>Category</label>
                <select id="category" class="form-control box-shadow">
                    <option value="" disabled selected>Category</option>
                    <option value="study">study</option>
                    <option value="project">project</option>
                    <option value="etc">etc</option>
                </select>
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea id="content" class="form-control box-shadow box-size-height" placeholder="Explain your Study/Project..."></textarea>
            </div>
        </form>
        <br><br>
        <br><br>
    </div>

{{>layout/footer}}