{{>layout/header}}

<!-- 게시글 상세 -->
<div class="container">
    {{#post}}
        <input type="hidden" id="id" value="{{id}}"> <!-- delete 를 위해 id 저장 -->
        <p style="font-size:small;">category / {{category}}</p>
        <p style="font-size:30px;">{{title}}</p>

        <span style="font-size:small; font-weight:bold;">{{author}}</span>
        <span style="font-size:xx-small;">{{createdDate}}</span>

        <div class="float-right">
            <span><a href="/posts/update/{{id}}" class="set-color">Edit</a></span>
            <span><button type="button" id="btn-delete" class="set-color no-border">Delete</button></span>
            <span><a href="/" class="set-color">Go Back</a></span>
        </div>
        <hr>
        <pre>{{content}}</pre>
    {{/post}}
    <br><br>

    <!-- 댓글 -->
    {{>comment/list}}
    {{>comment/form}}
</div>

{{>layout/footer}}