{{>layout/header}}

<h2>
    <a href="/">Study Matching Web</a>
</h2>
<div class="col-md-12">
    <!-- 로그인 -->
    <div class="row">
        <div class="col-md-6">
            {{#userName}}
                <span id="user">{{userName}}님 안녕하세요.</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google"
                   class="btn btn-success active" role="button">Google Login</a>
            {{/userName}}
        </div>
    </div>
    <!-- 검색 -->
    <form action="/posts/search" method="GET">
        <div class="btn-group" role="group">
            <input name="keyword" type="text" placeholder="검색어를 입력하세요.">
            <button class="btn btn-secondary">검색하기</button>
        </div>
    </form>
    <!-- 카테고리 -->
    <aside>
        <h4>category</h4>
        <ul>
            <li>study</li>
            <li>project</li>
        </ul>
    </aside>
    <!-- 글 목록 -->
    {{#userName}}
        <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
    {{/userName}}
    {{^userName}}
        <a href="/posts/save" role="button" class="btn btn-primary" onClick="alert('로그인이 필요해요.');">글 등록</a>
    {{/userName}}
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>글 번호</th>
            <th>카테고리</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{category}}</td>
                <td><a href="/posts/view/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{createdDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
    <!-- 페이징 -->
    <nav aria-label="Page navigation example">
        <ul class="pagination pagination-sm justify-content-center">
            {{#hasPrev}}
            <li class="page-item">
                <a class="page-link" href="?page={{prev}}" aria-label="Next">
                <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{/hasPrev}}
            {{#hasNext}}
            <li class="page-item">
                <a class="page-link" href="?page={{next}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            {{/hasNext}}
        </ul>
    </nav>
</div>

{{>layout/footer}}