{{>layout/header}}

    <div class="container">
        <div class="float-right">
            <a href="/" class="set-color">Go Back</a>
            <button type="button" id="btn-update" class="set-color no-border">Save</button>
        </div>
        <br><hr>
        <form>
            <input type="hidden" id="id" value="{{id}}">
            <div class="form-group">
                <label>Title</label>
                <input type="text" id="title" value="{{post.title}}" class="form-control box-shadow">
            </div>
            <div class="form-group">
                <label>Category</label>
                <select id="category" class="form-control box-shadow">
                    <option value="{{post.category}}" disabled selected style="display:none;">{{post.category}}</option>
                    <option value="study">study</option>
                    <option value="project">project</option>
                    <option value="etc">etc</option>
                </select>
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea id="content" class="form-control box-shadow box-size-height">{{post.content}}</textarea>
            </div>
        </form>
        <br><br>
        <br><br>
    </div>

{{>layout/footer}}